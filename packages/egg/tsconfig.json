{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "dist",
      "resolveJsonModule": true,
      "strictNullChecks": false,
      "paths": {
        "@blob/*": ["./src/*"]
      }
  },
  "include": [
      "src/**/*",
      "assets/**/*",
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}